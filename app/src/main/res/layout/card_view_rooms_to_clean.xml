<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cvRoomsToClean"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="true"
        >



    <FrameLayout
        android:id="@+id/frlRoom"
        android:layout_width="match_parent"
        android:background="@drawable/card_view_bg1"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_gravity="right"
            android:paddingLeft="50dp"
            android:layout_weight="1"
            android:orientation="horizontal">




            <Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:orientation="horizontal">



           <TextView
               android:id="@+id/txtNumber"
               android:textColor="#FFF"
               android:layout_width="62dp"
               android:layout_height="wrap_content"
               android:paddingTop="12dp"
               android:paddingBottom="12dp"
               android:paddingLeft="15dp"
               android:paddingRight="15dp"
               android:gravity="center"
               android:background="@drawable/text_view_bg1"
               android:text="378" />



            <TextView
                android:id="@+id/txtAbbreviation"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="58dp"
                android:background="@drawable/circle"
                android:gravity="center"
                android:textColor="#FFF"
                android:text="TextView"/>


            <ImageButton
                android:id="@+id/btnPlay"
                android:background="@drawable/btn_shape1"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:gravity="right"

                android:src="@drawable/ic_play2" />

            <ImageButton
                android:id="@+id/btnPause"
                android:background="@drawable/btn_shape1"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:layout_marginRight="30dp"
                android:gravity="right"
                android:src="@drawable/ic_stop" />

        </LinearLayout>

    </FrameLayout>


    </android.support.v7.widget.CardView>


